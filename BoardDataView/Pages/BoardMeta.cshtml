@page
@model BoardDataView.Pages.BoardMetaModel
@{
    ViewData["Title"] = "Board Meta Data";
}

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Board Meta Data</h2>
            
            <!-- Error Message Display -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error:</strong> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <!-- Toggle Button -->
            <form method="post" asp-page-handler="TogglePanel" class="mb-3">
                <button type="submit" class="btn btn-primary">
                    @(Model.DataPanel.ShowDataPanel ? "Hide" : "Show") Data Panel
                </button>
            </form>

            <!-- Data Panel -->
            @if (Model.DataPanel.ShowDataPanel)
            {
                <div class="card shadow">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Course Instance Data</h4>
                        <div>
                            <!-- Always show edit/new button -->
                            <form method="post" asp-page-handler="ToggleEditMode" class="d-inline">
                                @if (!Model.DataPanel.IsNewRecord)
                                {
                                    <!-- Edit button for existing records -->
                                    <button type="submit" class="btn btn-outline-light btn-sm" title="@(Model.DataPanel.IsEditMode ? "Cancel Edit" : "Edit")">
                                        <i class="bi @(Model.DataPanel.IsEditMode ? "bi-x-circle" : "bi-pencil")"></i>
                                        @(Model.DataPanel.IsEditMode ? "Cancel" : "Edit")
                                    </button>
                                }
                                else
                                {
                                    <!-- New record button -->
                                    <button type="submit" class="btn btn-outline-light btn-sm" title="Create New Record">
                                        <i class="bi bi-plus-circle"></i>
                                        New Record
                                    </button>
                                }
                            </form>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.DataPanel.IsEditMode)
                        {
                            <!-- Edit Mode Form -->
                            <form method="post" asp-page-handler="Save">
                                <div class="row">
                                    <!-- Board ID (hidden or display only) -->
                                    @if (Model.DataPanel.BoardId.HasValue)
                                    {
                                        <input type="hidden" asp-for="DataPanel.BoardId" />
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Board ID</label>
                                            <input type="text" class="form-control" value="@Model.DataPanel.BoardId" readonly />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="DataPanel.BoardId" class="form-label"></label>
                                            <input asp-for="DataPanel.BoardId" class="form-control" type="number" />
                                            <span asp-validation-for="DataPanel.BoardId" class="text-danger"></span>
                                        </div>
                                    }

                                    <!-- Course Dropdown -->
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DataPanel.SelectedCourseId" class="form-label"></label>
                                        <select asp-for="DataPanel.SelectedCourseId" class="form-select" asp-items="Model.DataPanel.Courses" required>
                                            <option value="">-- Select Course --</option>
                                        </select>
                                        <span asp-validation-for="DataPanel.SelectedCourseId" class="text-danger"></span>
                                    </div>

                                    <!-- Version Title (Manual Entry) -->
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DataPanel.VersionTitle" class="form-label"></label>
                                        <input asp-for="DataPanel.VersionTitle" class="form-control" maxlength="100" />
                                        <span asp-validation-for="DataPanel.VersionTitle" class="text-danger"></span>
                                    </div>

                                    <!-- Language Dropdown -->
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DataPanel.SelectedLanguageId" class="form-label"></label>
                                        <select asp-for="DataPanel.SelectedLanguageId" class="form-select" asp-items="Model.DataPanel.Languages">
                                            <option value="">-- Select Language --</option>
                                        </select>
                                        <span asp-validation-for="DataPanel.SelectedLanguageId" class="text-danger"></span>
                                    </div>

                                    <!-- Product Dropdown -->
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DataPanel.SelectedProductId" class="form-label"></label>
                                        <select asp-for="DataPanel.SelectedProductId" class="form-select" asp-items="Model.DataPanel.Products">
                                            <option value="">-- Select Product --</option>
                                        </select>
                                        <span asp-validation-for="DataPanel.SelectedProductId" class="text-danger"></span>
                                    </div>

                                    <!-- Instructor Dropdown -->
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DataPanel.SelectedInstructorId" class="form-label"></label>
                                        <select asp-for="DataPanel.SelectedInstructorId" class="form-select" asp-items="Model.DataPanel.Instructors">
                                            <option value="">-- Select Instructor --</option>
                                        </select>
                                        <span asp-validation-for="DataPanel.SelectedInstructorId" class="text-danger"></span>
                                    </div>

                                    <!-- Description (Manual Entry) -->
                                    <div class="col-12 mb-3">
                                        <label asp-for="DataPanel.Description" class="form-label"></label>
                                        <textarea asp-for="DataPanel.Description" class="form-control" rows="4" placeholder="Enter description here..."></textarea>
                                        <span asp-validation-for="DataPanel.Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Submit Buttons -->
                                <div class="row">
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-success me-2">
                                            <i class="bi bi-check-circle"></i> Save
                                        </button>
                                        <button type="reset" class="btn btn-secondary">
                                            <i class="bi bi-arrow-clockwise"></i> Reset
                                        </button>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <!-- Read-Only View Mode -->
                            <div class="row">
                                @if (Model.DataPanel.BoardId.HasValue)
                                {
                                    <div class="col-md-6 mb-3">
                                        <strong>Board ID:</strong>
                                        <p class="text-muted">@Model.DataPanel.BoardId</p>
                                    </div>
                                }

                                <div class="col-md-6 mb-3">
                                    <strong>Course:</strong>
                                    <p class="text-muted">@(Model.DataPanel.CourseDisplayName ?? "Not selected")</p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <strong>Version Title:</strong>
                                    <p class="text-muted">@(Model.DataPanel.VersionTitle ?? "Not specified")</p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <strong>Language:</strong>
                                    <p class="text-muted">@(Model.DataPanel.LanguageDisplayName ?? "Not selected")</p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <strong>Product:</strong>
                                    <p class="text-muted">@(Model.DataPanel.ProductDisplayName ?? "Not selected")</p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <strong>Instructor:</strong>
                                    <p class="text-muted">@(Model.DataPanel.InstructorDisplayName ?? "Not assigned")</p>
                                </div>

                                <div class="col-12 mb-3">
                                    <strong>Description:</strong>
                                    <p class="text-muted">@(Model.DataPanel.Description ?? "No description provided")</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
