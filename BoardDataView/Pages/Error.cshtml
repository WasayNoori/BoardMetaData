@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> An error occurred
                    </h1>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">Something went wrong while processing your request</h5>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-info">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    <div class="alert alert-warning">
                        <h6 class="alert-heading">Common Issues:</h6>
                        <ul class="mb-0">
                            <li><strong>Database Connection:</strong> The database might be temporarily unavailable</li>
                            <li><strong>Network Issues:</strong> Check your internet connection</li>
                            <li><strong>Server Maintenance:</strong> The service might be under maintenance</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <h6>What you can do:</h6>
                        <div class="btn-group-vertical gap-2 w-100">
                            <a href="javascript:history.back()" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left"></i> Go Back
                            </a>
                            <a href="/" class="btn btn-primary">
                                <i class="fas fa-home"></i> Return to Home
                            </a>
                            <button type="button" class="btn btn-success" onclick="location.reload()">
                                <i class="fas fa-refresh"></i> Try Again
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        If this problem persists, please contact the system administrator.
                        <br>
                        Time: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-group-vertical .btn {
        margin-bottom: 0.5rem;
    }
</style>
